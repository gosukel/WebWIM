<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
            rel="stylesheet"
        />
        <link rel="stylesheet" href="/css/reset.css" />
        <link rel="stylesheet" href="/css/index.css" />

        <% if (typeof styles !== "undefined") { %>
            <% styles.forEach(style => { %>
                <link rel="stylesheet" href="/css/<%= style %>.css">
            <% }) %>
        <% } %>
    </head>
    <body>
        <div class="sidebar-div"><%- include('partials/sidebar') %></div>
        <div class="main-div">
            <% if (typeof errors !== "undefined") { %>
             <%- include('partials/error') %>
            <% } %>
            <%- include(`partials/${main}`) %>
        </div>

        <% if (main === "calculator") { %>
            <script src="js/calculate.js"></script>
        <% } %>
        <% if (main === "process") { %>
            <script>
                window.items = <%- JSON.stringify(items) %>;   
            </script>
            <script src="js/process.js" type="module"></script>
        <% } %>
        <% if (main === "items") { %>
            <script>
                window.items = <%- JSON.stringify(items) %>;   
            </script>
            <script src="js/items.js" type="module"></script>
        <% } %>
        <script src="js/error.js" type="module"></script>
    </body>
</html>
