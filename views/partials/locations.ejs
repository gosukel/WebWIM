<div class="loc-container">
    <div class="overlay hidden"></div>
    <div class="loc-left-container">
        <div class="loc-search-container">
            <input
                type="text"
                name="loc-search"
                id="loc-search"
                class="loc-search"
            />
            <span class="loc-search-icon">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.8"
                    stroke="currentColor"
                    class="item-search-icon"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
                    />
                </svg>
            </span>
        </div>
        <div class="loc-table-container">
            <table class="loc-table">
                <thead>
                    <tr scope="col">
                        <th
                            data-sort="id"
                            data-direction="asc"
                            class="col-loc-head"
                        >
                            Location<span class="th-sort-direction"></span>
                        </th>
                        <th
                            data-sort="utn"
                            data-direction="asc"
                            class="col-utn-head"
                        >
                            UTN<span class="th-sort-direction"></span>
                        </th>
                        <th
                            data-sort="zone"
                            data-direction="asc"
                            class="col-zone-head"
                        >
                            Zone<span class="th-sort-direction"></span>
                        </th>
                        <th
                            data-sort="items"
                            data-direction="asc"
                            class="col-item-head"
                        >
                            Item (stock)<span class="th-sort-direction"></span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% for( let i = 0; i < locations.length; i++ ) { %>
                        <tr class="loc-parent <%= (i + 1) % 2 === 0 ? 'even' : 'odd' %>" data-locid="<%= locations[i].id %>">
                            <td class="col-loc"><%= locations[i].location %></td>
                            <td class="col-utn"><%= locations[i].utn %></td>
                            <td class="col-zone"><%= locations[i].zone %></td>
                            <td class="col-item"><%= locations[i].items[0]?.item?.item || "-" %></td>
                        </tr>
                        <tr class="loc-child">
                            <td colspan="4"><div class="loc-child-content">All Items <% locations[i].items.forEach(item => { %>
                                <%= `- ${item.item.item}` %>
                            <% }) %></div></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <dialog class="modal" id="modal">
            <form action="" method="post" class="loc-form">
                <div class="form-title-container">
                    <p class="loc-form-header"></p>
                    <input type="text" name="loc-id" id="loc-id" class="loc-id" readonly value="100">
                </div>
                <!-- location / zone / utn / items -->
                <div class="form-input-container">
                    <label for="loc-name">Location: </label>
                    <input type="text" name="loc-name" id="loc-name" class="loc-name">
                </div>
                <div class="form-input-container">
                    <label for="loc-zone">Zone: </label>
                    <select name="loc-zone" id="loc-zone" class="loc-zone">
                        <option value="">-Select a Zone</option>
                        <% zones.forEach(zone => { %>
                            <option value="<%= zone %>"><%= zone %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-input-container">
                    <label for="loc-utn">UTN: </label>
                    <input type="text" name="loc-utn" id="loc-utn" class="loc-utn">
                </div>
                <div class="form-input-container loc-prev-container">
                    <label for="loc-prev">Comes After: </label>
                    <select name="loc-prev" id="loc-prev" class="loc-prev">
                        <option value="">-Select a Location-</option>
                        <% locations.forEach(location => { %>
                            <option value="<%= location.id %>"><%= location.location %></option>
                        <% }) %>

                    </select>
                </div>
                <div class="form-input-container loc-items-container">
                    <label for="loc-items">Items: </label>
                    <textarea name="loc-items" id="loc-items" class="loc-items" rows="6"></textarea>
                </div>
                <div class="form-buttons">
                    <button type="button" class="modal-close-btn">X</button>
                    <button type="submit" class="modal-submit-btn">Submit</button>
                </div>
            </form>
        </dialog>
    </div>
    <div class="loc-menu-container">
        <button class="btn-loc-add">Add Location</button>
        <button class="btn-loc-edit">Edit Location</button>
        <button class="btn-loc-history">Location History</button>
    </div>
</div>
