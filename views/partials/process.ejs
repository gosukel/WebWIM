<div class="process-container">
    <div class="left-container">
        <div class="search-container">
            <input type="text" name="search" id="search" />
            <span class="search-icon"
                ><svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="search-icon"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"
                    />
                </svg>
            </span>
        </div>
        <div class="brand-buttons">
            <% brands.forEach(brand => { %>
                <button class="brand-btn" data-brand="<%= brand %>"><%= brand %></button>
            <% }) %>
        </div>
        <div class="item-display">
            <ul class="item-list">
                <% items.forEach(item => { %>
                <li class="item-list-item" data-item="<%= item.item %>" data-weight="<%= item.weight %>" data-palletqty="<%= item.palletQty %>"><p class="item-name"><%= item.item %></p></li>
                <% }) %>
            </ul>
        </div>
        <div class="add-container">
            <button class="add-btn">Add To Order</button>
            <input type="number" class="add-qty" value="1">
        </div>
    </div>
    <div class="right-container">
        <div class="order-input"></div>
        <div class="order-details"></div>
        <div class="order-btns"></div>
    </div>
</div>
